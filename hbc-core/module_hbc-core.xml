<?xml version="1.0" encoding="UTF-8"?>
<project name="module_hbc-core" default="compile.module.hbc-core">
  <dirname property="module.hbc-core.basedir" file="${ant.file.module_hbc-core}"/>
  
  <property name="module.jdk.home.hbc-core" value="${jdk.home.1.7}"/>
  <property name="module.jdk.bin.hbc-core" value="${jdk.bin.1.7}"/>
  <property name="module.jdk.classpath.hbc-core" value="jdk.classpath.1.7"/>
  
  <property name="compiler.args.hbc-core" value="-encoding UTF-8 -source 1.6 -target 1.6 ${compiler.args}"/>
  
  <property name="hbc-core.output.dir" value="${module.hbc-core.basedir}/target/classes"/>
  <property name="hbc-core.testoutput.dir" value="${module.hbc-core.basedir}/target/test-classes"/>
  
  <path id="hbc-core.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="hbc-core.module.production.classpath">
    <path refid="${module.jdk.classpath.hbc-core}"/>
    <path refid="library.maven:_org.apache.httpcomponents:httpclient:4.2.5.classpath"/>
    <path refid="library.maven:_org.apache.httpcomponents:httpcore:4.2.4.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.1.1.classpath"/>
    <path refid="library.maven:_commons-codec:commons-codec:1.6.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:14.0.1.classpath"/>
    <path refid="library.maven:_org.slf4j:slf4j-api:1.6.6.classpath"/>
    <path refid="library.maven:_com.twitter:joauth:6.0.2.classpath"/>
    <path refid="library.maven:_com.google.code.findbugs:jsr305:1.3.9.classpath"/>
  </path>
  
  <path id="hbc-core.runtime.production.module.classpath">
    <pathelement location="${hbc-core.output.dir}"/>
    <path refid="library.maven:_org.apache.httpcomponents:httpclient:4.2.5.classpath"/>
    <path refid="library.maven:_org.apache.httpcomponents:httpcore:4.2.4.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.1.1.classpath"/>
    <path refid="library.maven:_commons-codec:commons-codec:1.6.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:14.0.1.classpath"/>
    <path refid="library.maven:_org.slf4j:slf4j-api:1.6.6.classpath"/>
    <path refid="library.maven:_com.twitter:joauth:6.0.2.classpath"/>
    <path refid="library.maven:_com.google.code.findbugs:jsr305:1.3.9.classpath"/>
  </path>
  
  <path id="hbc-core.module.classpath">
    <path refid="${module.jdk.classpath.hbc-core}"/>
    <pathelement location="${hbc-core.output.dir}"/>
    <path refid="library.maven:_org.apache.httpcomponents:httpclient:4.2.5.classpath"/>
    <path refid="library.maven:_org.apache.httpcomponents:httpcore:4.2.4.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.1.1.classpath"/>
    <path refid="library.maven:_commons-codec:commons-codec:1.6.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:14.0.1.classpath"/>
    <path refid="library.maven:_org.slf4j:slf4j-api:1.6.6.classpath"/>
    <path refid="library.maven:_com.twitter:joauth:6.0.2.classpath"/>
    <path refid="library.maven:_com.google.code.findbugs:jsr305:1.3.9.classpath"/>
    <path refid="library.maven:_org.mockito:mockito-all:1.8.5.classpath"/>
    <path refid="library.maven:_junit:junit:4.8.1.classpath"/>
  </path>
  
  <path id="hbc-core.runtime.module.classpath">
    <pathelement location="${hbc-core.testoutput.dir}"/>
    <pathelement location="${hbc-core.output.dir}"/>
    <path refid="library.maven:_org.apache.httpcomponents:httpclient:4.2.5.classpath"/>
    <path refid="library.maven:_org.apache.httpcomponents:httpcore:4.2.4.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.1.1.classpath"/>
    <path refid="library.maven:_commons-codec:commons-codec:1.6.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:14.0.1.classpath"/>
    <path refid="library.maven:_org.slf4j:slf4j-api:1.6.6.classpath"/>
    <path refid="library.maven:_com.twitter:joauth:6.0.2.classpath"/>
    <path refid="library.maven:_com.google.code.findbugs:jsr305:1.3.9.classpath"/>
    <path refid="library.maven:_org.mockito:mockito-all:1.8.5.classpath"/>
    <path refid="library.maven:_junit:junit:4.8.1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.hbc-core">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.hbc-core">
    <patternset refid="excluded.from.module.hbc-core"/>
  </patternset>
  
  <path id="hbc-core.module.sourcepath">
    <dirset dir="${module.hbc-core.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="hbc-core.module.test.sourcepath">
    <dirset dir="${module.hbc-core.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.hbc-core" depends="compile.module.hbc-core.production,compile.module.hbc-core.tests" description="Compile module hbc-core"/>
  
  <target name="compile.module.hbc-core.production" depends="register.custom.compilers" description="Compile module hbc-core; production classes">
    <mkdir dir="${hbc-core.output.dir}"/>
    <javac2 destdir="${hbc-core.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.hbc-core}/javac">
      <compilerarg line="${compiler.args.hbc-core}"/>
      <bootclasspath refid="hbc-core.module.bootclasspath"/>
      <classpath refid="hbc-core.module.production.classpath"/>
      <src refid="hbc-core.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.hbc-core"/>
    </javac2>
    
    <copy todir="${hbc-core.output.dir}">
      <fileset dir="${module.hbc-core.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.hbc-core.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.hbc-core.tests" depends="register.custom.compilers,compile.module.hbc-core.production" description="compile module hbc-core; test classes" unless="skip.tests">
    <mkdir dir="${hbc-core.testoutput.dir}"/>
    <javac2 destdir="${hbc-core.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.hbc-core}/javac">
      <compilerarg line="${compiler.args.hbc-core}"/>
      <bootclasspath refid="hbc-core.module.bootclasspath"/>
      <classpath refid="hbc-core.module.classpath"/>
      <src refid="hbc-core.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.hbc-core"/>
    </javac2>
    
    <copy todir="${hbc-core.testoutput.dir}">
      <fileset dir="${module.hbc-core.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.hbc-core" description="cleanup module">
    <delete dir="${hbc-core.output.dir}"/>
    <delete dir="${hbc-core.testoutput.dir}"/>
  </target>
</project>